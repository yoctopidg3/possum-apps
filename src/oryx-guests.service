[Unit]
Description=Auto start and stop enabled oryx guests
After=network.target

[Service]
Type=oneshot
ExecStart=/sbin/oryxcmd startup
RemainAfterExit=true
ExecStop=/sbin/oryxcmd shutdown
StandardOutput=journal

[Install]
WantedBy=multi-user.target
